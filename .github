name: Publish on Push

on:
  push:
    branches:
      - main # Cambia questo se stai utilizzando un'altra branch principale

jobs:
  build:
    runs-on: macos-latest # Cambia questo se necessario

    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Setup Node.js
        uses: actions/setup-node@v2
        with:
          node-version: "14" # Cambia la versione di Node.js se necessario

      - name: Install dependencies and build
        run: |
          npm install  # o qualsiasi comando sia necessario per installare le dipendenze
          npm run build  # o qualsiasi comando per compilare il tuo progetto

      - name: Deploy to GitHub Pages
        uses: JamesIves/github-pages-deploy-action@3.7.1
        with:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
          BRANCH: gh-pages # Cambia questo se stai utilizzando un'altra branch per GitHub Pages
          FOLDER: build # Cambia questo se il tuo progetto ha una cartella diversa per i file compilati
